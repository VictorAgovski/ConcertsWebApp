@using LiveMetal.Core.Models.Member
@model BandMemberDetailedViewModel

@{
    ViewData["Title"] = "Member Details";
}

<div class="card">
    <div class="card-header">@Model.FullName</div>
    <div class="card-body">
        <p><strong>Role:</strong> @Model.Role</p>
        <p><strong>Biography:</strong> @Model.Biography</p>
        <p><strong>Date of Birth:</strong> @Model.DateOfBirth</p>
        <p><strong>Date of Joining:</strong> @Model.DateOfJoining</p>
        <p><strong>Band:</strong> @Model.BandName</p>
    </div>
</div>
