@using LiveMetal.Core.Models.Venue
@model VenueCreateViewModel

@{
    ViewData["Title"] = "Create Venue";
}

<h1 class="my-4 text-center">@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" method="post" class="card card-body bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"><i class="fas fa-building"></i> Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter venue name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Location" class="form-label"><i class="fas fa-map-marker-alt"></i> Location</label>
                    <input asp-for="Location" class="form-control" placeholder="Enter location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label"><i class="fas fa-users"></i> Capacity</label>
                    <input asp-for="Capacity" type="number" class="form-control" placeholder="Enter capacity" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ContactInfo" class="form-label"><i class="fas fa-phone"></i> Contact Info</label>
                    <input asp-for="ContactInfo" class="form-control" placeholder="Enter contact information" />
                    <span asp-validation-for="ContactInfo" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Create Venue</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" />
}
