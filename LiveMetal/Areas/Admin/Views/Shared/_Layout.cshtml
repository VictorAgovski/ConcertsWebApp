<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LiveMetal Admin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/_layout.css" asp-append-version="true">
    <link rel="stylesheet" href="~/LiveMetal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand/logo on the left -->
                <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">LiveMetal Admin</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <!-- Centered navigation links with dropdowns -->
                <div class="collapse navbar-collapse justify-content-center">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="bandsDropdown" role="button"
                               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Bands
                            </a>
                            <div class="dropdown-menu" aria-labelledby="bandsDropdown">
                                <a class="dropdown-item" asp-controller="Band" asp-action="All">All Bands</a>
                                <a class="dropdown-item" asp-controller="Band" asp-action="Create">Create Band</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="venuesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Venues
                            </a>
                            <div class="dropdown-menu" aria-labelledby="venuesDropdown">
                                <a class="dropdown-item" asp-controller="Venue" asp-action="All">All Venues</a>
                                <a class="dropdown-item" asp-controller="Venue" asp-action="Create">Create Venue</a>
                            </div>
                        </li>
                    </ul>
                </div>

                <!-- Logout and switch back to normal view -->
                <div class="collapse navbar-collapse justify-content-end" style="flex-grow: 0;">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Switch to User View</a>
                        </li>
                        <li class="nav-item">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="btn btn-outline-danger">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @RenderSection("Styles", required: false)
</body>
</html>

